                              </GridPane.margin>
                           </Button>
                           <Button fx:id="addFile" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#addFileButton" prefHeight="32.0" prefWidth="96.0" text="Add file" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" />
